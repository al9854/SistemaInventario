

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!--Boostrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Bootstrap DatePicker -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" type="text/css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js" type="text/javascript"></script>

    <!-- Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/14cfd73b7f.js" crossorigin="anonymous"></script>
    <!-- ===== CSS ===== -->
    <link rel="stylesheet" href="~/CSS/General.css">
</head>


<body class="container-fluid">
    <div class="container mt-5">
        <h2 class="blockquote text-right">Configuración Switch</h2>
        <!-- Contador de Inactividad -->
        <div id="contadorInactividad" class="mt-3">
            <span id="tiempoRestante">Tiempo de cierre por inactividad: 03:00</span>
        </div>
        <hr>
        <div class="row justify-content-between">
            <div class="col-3">
                <button id="btnAgregar" type="button" class="btn btn-primary p-2" data-bs-toggle="modal" data-bs-target="#Agregar">
                    Agregar
                </button>
            </div>
            <div class="col-5">
                <!-- Espacio en blanco -->
            </div>
            <div class="col-4">
                <div class="row">
                    <div class="col">
                        <input id="txtBuscar" class="form-control p-2" type="search" placeholder="Buscar" aria-label="Search">
                    </div>
                    <div class="col-auto">
                        <button id="btnBuscar" class="btn btn-outline-success p-2" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="container mt-4">
            <div class="row">
                <div class="col">
                    <div class="table-responsive" style="overflow-x: auto; max-height: 450px;">
                        <table class="table table-sm table-bordered" style="min-width: 150%;">
                            <thead class="table-primary">
                                <tr>
                                    <th class="text-center" style="width: 7%;">N°</th>
                                    <th class="text-center" style="width: 9%;">Sede</th>
                                    <th class="text-center" style="width: 12%;">Area</th>
                                    <th class="text-center" style="width: 9%;">Tipo</th>
                                    <th class="text-center" style="width: 19%;">Modelo</th>
                                    <th class="text-center" style="width: 12%;">Velocidad</th>
                                    <th class="text-center" style="width: 7%;">Puertos</th>
                                    <th class="text-center" style="width: 9%;">Observación</th>
                                    <th class="text-center" style="width: 7%;">Puertos en Uso</th>
                                    <th class="text-center" style="width: 9%;">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="grilla">
                                <!-- Filas de la tabla -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Modal -->
    <div class="modal fade" id="Agregar" tabindex="-1" role="dialog" aria-labelledby="Agregar Switch" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="formSwitch">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label class="form-label">Modelo</label>
                                <input type="text" class="form-control" id="txtModelo" name="Modelo">
                            </div>
                            <div class="col-2 mb-3">
                                <label class="form-label">Tipo</label>
                                <select class="form-select" id="cmbTipo" name="Tipo">
                                    <option value="0">Seleccione...</option>
                                    <option value="1">SWITCH</option>
                                    <option value="2">ROUTER</option>
                                </select>
                            </div>
                            <div class="col-2 mb-3">
                                <label class="form-label">Sede</label>
                                <select class="form-select" id="cmbSede" name="Sede">
                                    <option value="0">Seleccione...</option>
                                    <option value="1">PUENTE PIEDRA</option>
                                    <option value="2">LOS OLIVOS</option>
                                </select>
                            </div>
                            <div class="col-2 mb-3">
                                <label class="form-label">Area</label>
                                <select class="form-select" id="cmbArea" name="Area">
                                </select>
                            </div>
                            <div class="col-2 mb-3">
                                <label class="form-label">Velocidad</label>
                                <input type="text" class="form-control" id="txtVelocidad" name="Velocidad">
                            </div>
                            <div class="col-2 mb-3">
                                <label class="form-label">Puertos</label>
                                <input type="text" class="form-control" id="txtPuertos" name="Puertos">
                            </div>
                            <div class="col-4 mb-3">
                                <label class="form-label">Observación</label>
                                <input type="text" class="form-control" id="txtObservacion" name="Observacion">
                            </div>
                            <div class="col-2 mb-3">
                                <label class="form-label">Puertos en Uso</label>
                                <input type="text" class="form-control" id="txtPuertosenuso" name="Puertos en Uso">
                            </div>
                            <input type="hidden" id="editId" name="id" value="0">
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                <button type="button" class="btn btn-primary" id="btnGuardar">Guardar</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>


    <!-- Modal Cargando -->
    <div id="modalProcesando" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body d-flex align-items-center">
                    <img class="ima-pros" src="~/Image/PF_sinfondo.png" />
                    <span class="ml-4">Procesando...</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Mostrar alerta -->
    <div id="alertContainer"></div>

    <!-- Botones para editar y eliminar (ocultos) -->
    <div id="templates" style="display: none;">
        <button class="btn btn-sm btn-outline-primary me-2  btneditar" title="Editar"><i class="fa-solid fa-pen-to-square"></i></button>
        <button class="btn btn-sm btn-outline-danger me-2  btneliminar" data-id="" title="Eliminar"><i class="fa-solid fa-trash"></i></button>
    </div>




    <script>
    var urlListarConfiguracionSwitch = '@Url.Action("ListarConfiguracionSwitch", "Configuracion")';
    var urlObtenerSwitchxId = '@Url.Action("ObtenerSwitchxId", "Configuracion")';
    var urlEliminarSwitchxID = '@Url.Action("EliminarSwitchxID", "Configuracion")';
    var urlAgregarSwitch = '@Url.Action("AgregarSwitch", "Configuracion")';
    var urlLlenarComboArea = '@Url.Action("LlenarComboArea", "General")';
    </script>

    <script src="~/JS/Configuracion/Switch.js"></script>
    <script src="~/JS/Utils.js"></script>
</body>