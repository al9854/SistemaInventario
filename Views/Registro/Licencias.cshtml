

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Boostrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/14cfd73b7f.js" crossorigin="anonymous"></script>


    <!-- ===== CSS ===== -->
    <link rel="stylesheet" href="~/CSS/General.css">
</head>


<body class="container-fluid">
    <div class="container mt-5">
        <h2 class="blockquote text-right">Configuracion Licencias</h2>
        <!-- Contador de Inactividad -->
        <div id="contadorInactividad" class="mt-3">
            <span id="tiempoRestante">Tiempo de cierre por inactividad: 03:00</span>
        </div>
        <hr>
        <div class="row justify-content-between">
            <div class="col-3">
                <button type="button" class="btn btn-primary p-2" data-bs-toggle="modal" id="btnAgregar" data-bs-target="#Agregar">
                    Agregar
                </button>
            </div>
            <div class="col-5">
                <!-- Este div actúa como un espacio en blanco para empujar los elementos al fondo -->
            </div>
            <div class="col-4">
                <div class="row">
                    <div class="col">
                        <input id="txtBuscar" class="form-control p-2" type="search" placeholder="Buscar" aria-label="Search">
                    </div>
                    <div class="col-auto">
                        <button id="btnBuscar" class="btn btn-outline-success p-2" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="mb-3">
        </div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="table-responsive">
                        <table class="table table-sm  table-bordered">
                            <thead class="table-primary">
                                <tr>
                                    <th class="col-1 text-center">N°</th>
                                    <th>Area</th>
                                    <th>Personal</th>
                                    <th>Equipo</th>
                                    <th class="col-2 text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="grilla">
                                <!-- Filas generadas dinámicamente -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal Principal-->
    <div class="modal fade" id="Agregar" tabindex="-1" role="dialog" aria-labelledby="Agregar" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="formLaptop">
                        <div class="col-3 mb-3">
                            <label for="dato4" class="form-label">Area</label>
                            <select class="form-select" id="cmbArea" name="Area">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="dato2" class="form-label">Personal</label>
                            <input type="text" class="form-control" id="txtPersonal">
                        </div>
                        <div class="mb-3">
                            <label for="dato2" class="form-label">Equipo</label>
                            <input type="text" class="form-control" id="txtEquipo">
                        </div>
                        <input type="hidden" id="editId" name="id" value="0">
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" id="btnGuardar">Guardar</button>
                </div>

            </div>
        </div>
    </div>

    <!-- Modal Detalle Office-->
    <div class="modal fade" id="AgregarDetalleOffice" tabindex="-1" role="dialog" aria-labelledby="Agregar Detalle Office" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Detalle de Licencias</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <h5>OFFICE</h5>
                        <div class="col-5 mb-3">
                            <label for="dato1" class="form-label">Versión</label>
                            <select class="form-select" id="versionofi" name="versionOfi">
                            </select>
                        </div>
                        <div class="col-4 mb-3">
                            <label for="dato2" class="form-label">Estado</label>
                            <select class="form-select" id="estadoofi" name="estadoOfi">
                                <option value="0">Seleccione...</option>
                                <option value="1">CRACKEADO</option>
                                <option value="2">ACTIVADO</option>
                                <option value="3">LIBRE</option>
                            </select>
                        </div>
                        <div class="col-3 mb-3">
                            <label for="dato4" class="form-label">Fecha Modificación</label>
                            <input type="text" class="form-control" id="txtfechaofi" name="fechaModif" readonly>
                        </div>
                        <div class="col-12 mb-3">
                            <label for="dato3" class="form-label">Licencia</label>
                            <input type="text" class="form-control" id="txtLicenciaofi" name="licenciaOfi">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" id="btnGuardardetalleOffice"><i class="fa-solid fa-rotate"></i>Actualizar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

    <!-- Modal Detalle Windows-->
    <div class="modal fade" id="AgregarDetalleWindows" tabindex="-1" role="dialog" aria-labelledby="Agregar Detalle Windows" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Detalle de Licencias</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <h5>WINDOWS</h5>
                        <div class="col-5 mb-3">
                            <label for="dato1" class="form-label">Versión</label>
                            <select class="form-select" id="versionwin" name="versionWin">
                            </select>
                        </div>
                        <div class="col-4 mb-3">
                            <label for="dato2" class="form-label">Estado</label>
                            <select class="form-select" id="estadowin" name="estadoWin">
                                <option value="0">Seleccione...</option>
                                <option value="1">CRACKEADO</option>
                                <option value="2">ACTIVADO</option>
                                <option value="3">LIBRE</option>
                            </select>
                        </div>
                        <div class="col-3 mb-3">
                            <label for="dato4" class="form-label">Fecha Modificación</label>
                            <input type="text" class="form-control" id="txtfechawin" name="fechaModifWin" readonly>
                        </div>
                        <div class="col-12 mb-3">
                            <label for="dato3" class="form-label">Licencia</label>
                            <input type="text" class="form-control" id="txtLicenciawin" name="licenciaWin">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" id="btnGuardardetalleWindows"><i class="fa-solid fa-rotate"></i>Actualizar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Modal Cargando -->
    <div id="modalProcesando" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body d-flex align-items-center">
                    <img class="ima-pros" src="~/Image/PF_sinfondo.png" />
                    <span class="ml-4">Procesando...</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Mostrar alerta -->
    <div id="alertContainer"></div>

    <!-- Botones para editar y eliminar (ocultos) -->
    <div id="templates" style="display: none;">
        <button class="btn btn-sm btn-outline-primary me-2  btndetallesofi" data-id="" title="Lic. Office"><i class="fa-solid fa-file"></i></button>
        <button class="btn btn-sm btn-outline-primary me-2  btndetalleswin" data-id="" title="Lic. Windows"><i class="fa-solid fa-desktop"></i></button>
        <button class="btn btn-sm btn-outline-secondary me-2  btneditar" data-id="" title="Editar"><i class="fa-solid fa-pen-to-square"></i></button>
        <button class="btn btn-sm btn-outline-danger me-2  btneliminar" data-id="" title="Eliminar"><i class="fa-solid fa-trash"></i></button>
    </div>



    <script>
    var urlListarConfiguracionLicencias = '@Url.Action("ListarConfiguracionLicencias", "Configuracion")';
    var urlObtenerRegistroxId = '@Url.Action("ObtenerRegistroxId", "Configuracion")';
    var urlObtenerOfficexId = '@Url.Action("ObtenerOfficexId", "Configuracion")';
    var urlObtenerWindowsxId = '@Url.Action("ObtenerWindowsxId", "Configuracion")';
    var urlAgregarLicencia = '@Url.Action("AgregarLicencia", "Configuracion")';
    var urlEliminarLicenciaxID = '@Url.Action("EliminarLicenciaxID", "Configuracion")';
    var urlObtenerDetallesxId = '@Url.Action("ObtenerDetallesxId", "Configuracion")';
    var urlGuardarDetalleOffice = '@Url.Action("GuardarDetalleOffice", "Configuracion")';
    var urlGuardarDetalleWindows = '@Url.Action("GuardarDetalleWindows", "Configuracion")';
    var urlLlenarComboArea = '@Url.Action("LlenarComboArea", "General")';
    var urlLlenarComboOffice = '@Url.Action("LlenarComboOffice", "General")';
        var urlLlenarComboWindows = '@Url.Action("LlenarComboWindows", "General")';
    </script>


    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/JS/Configuracion/Licencias.js"></script>
    <script src="~/JS/Utils.js"></script>
</body>