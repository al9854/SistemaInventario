

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!--Boostrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Bootstrap DatePicker -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" type="text/css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js" type="text/javascript"></script>

    <!-- Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/14cfd73b7f.js" crossorigin="anonymous"></script>
    <!-- ===== CSS ===== -->
    <link rel="stylesheet" href="~/CSS/Global.css">
</head>


<body>

    <div class="contenedor">
        <section class="head-general">
            <div class="title-text">
                <div class="title"><h2 class="">Registro de Usuarios VPN</h2></div>
                <div id="contadorInactividad" class="title-inactivity">
                    <span id="tiempoRestante">Tiempo de cierre por inactividad: 03:00</span>
                </div>
            </div>

            <hr>
        </section>
        <section class="body-general">
            <div class="row">
                <div class="box-header d-flex justify-content-between">
                    <!-- Menu de Botones -->
                    <div class="btn-group">
                        <button id="btnAgregar" data-bs-toggle="modal" data-bs-target="#Agregar" type="button" class="btn" title="Agregar">
                            <i class="icon fa-regular fa-square-plus"></i>
                        </button>
                        <button id="btnRefrescar" type="button" class="btn" title="Actualizar"><i class="icon fa fa-refresh"></i></button>
                    </div>
                    <div class="box-text">
                        <input type="text" class="form-control" placeholder="Buscar" id="txtBuscar">
                        <button type="button" id="btnBuscar" class="btn"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table  table-striped">
                        <thead>
                            <tr>
                                <th style="width: 5%">ID</th>
                                <th style="width: 20%">Area</th>
                                <th style="width: 20%">Nombre</th>
                                <th style="width: 10%">Usuario</th>
                                <th style="width: 10%">Contraseña</th>
                                <th style="width: 10%">Estado</th>
                                <th style="width: 10%">Fecha Mod.</th>
                                <th style="width: 20%">Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="grilla-usuariosvpn">
                        </tbody>
                    </table>
                </div>

                <!-- /.box-body -->
                <div class="box-footer">
                    <div class="pull-right">
                        <div class="btn-group">
                            <button type="button" class="btn" id="btnAnterior"><i class="fa fa-chevron-left"></i></button>
                            <button type="button" class="btn" id="btnSiguiente"><i class="fa fa-chevron-right"></i></button>
                        </div>
                        <span id="contadorRegistros"></span>
                    </div>
                </div>
            </div>

        </section>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="Agregar" tabindex="-1" aria-labelledby="AgregarAreaLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <img src="~/Image/ic_launcher_logo.png">
                    <h5 class="modal-title" id="AgregarAreaLabel">Agregar</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <form id="formAreas">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="Areas">Area</label>
                                        <select name="options" class="input" id="cmbArea">
                                            <option value="0">Seleccione...</option>
                                        </select>
                                        <span class="d-none span-error" id="errorvacio1">*El dato seleccionado es incorrecto</span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="Sedes">Sede</label>
                                        <select name="options" class="input" id="cmbSede">
                                            <option value="0">Seleccione...</option>
                                            <option value="1">PUENTE PIEDRA</option>
                                            <option value="2">LOS OLIVOS</option>
                                        </select>
                                        <span class="d-none span-error" id="errorvacio2">*El dato seleccionado es incorrecto</span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="Usuario">Usuario</label>
                                        <input type="text" id="txtUsuario" name="Usuario">
                                        <span class="d-none span-error" id="errorvacio3">*El dato seleccionado es incorrecto</span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="Nombre">Nombre</label>
                                        <input type="text" id="txtNombre" name="Nombre">
                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="Contraseña">Contraseña</label>
                                        <input type="text" id="txtContraseña" name="Contraseña">
                                    </div>
                                </div>

                            </div>
                            <input type="hidden" id="editId" name="id" value="0">
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-modal" id="btnGuardar">Guardar</button>
                    <button type="button" class="btn-modal" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal Cargando -->
    <div id="modalProcesando" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body d-flex align-items-center">
                    <img class="ima-pros" src="~/Image/PF_sinfondo.png" />
                    <span class="ml-4">Procesando...</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Mostrar alerta -->
    <div id="alertContainer"></div>

    <!-- Botones para editar y eliminar (ocultos) -->
    <div id="templates" style="display: none;">
        <button class="btn  btneditar" data-id="" title="Editar"><i class="fa-solid fa-pen-to-square"></i></button>
        <button class="btn btncopiar" data-id="" title="Copiar"><i class="fa-solid fa-copy"></i></button>
        <button class="btn   btncesar" data-id="" title="Dar de Baja"><i class="fa-regular fa-circle-xmark"></i></button>
    </div>




    <script>
        var urlListarRegistroUsuariosVPN = '@Url.Action("ListarRegistroUsuariosVPN", "Registro")';
        var urlObtenerUsuariosVPNxId = '@Url.Action("ObtenerUsuariosVPNxId", "Registro")';
        var urlAgregarUsuariosVPN = '@Url.Action("AgregarUsuariosVPN", "Registro")';
        var urlLlenarComboArea = '@Url.Action("LlenarComboArea", "General")';
        var urlDatosFijos = '@Url.Action("DatosFijos", "Registro")';
        var urlCopiarUsuario = '@Url.Action("CopiarUsuario", "Registro")';
        var urlCesarUsuarioVPN = '@Url.Action("CesarUsuarioVPN", "Registro")';
    </script>

    <script src="~/JS/Registro/UsuariosVPN.js"></script>
    <script src="~/JS/Utils.js"></script>
    <script src="~/JS/Errores.js"></script>
</body>